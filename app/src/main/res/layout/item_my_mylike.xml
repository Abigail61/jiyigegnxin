<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="230dp"
    android:background="@color/white"
    android:paddingHorizontal="10dp">

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/like_touxiang"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:src="@mipmap/touxiang"
            android:layout_marginTop="10dp" />

        <TextView
            android:id="@+id/like_yonghuming"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="用户名"
            android:layout_toRightOf="@+id/like_touxiang"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="10dp"
            android:textSize="16sp"
            android:textColor="@color/black" />

        <TextView
            android:id="@+id/like_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="2021年1月1日"
            android:textSize="14sp"
            android:layout_below="@+id/like_yonghuming"
            android:layout_toRightOf="@+id/like_touxiang"
            android:layout_marginLeft="10dp" />

        <TextView
            android:id="@+id/like_phone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="来自ipone客户端"
            android:textSize="14sp"
            android:layout_below="@+id/like_yonghuming"
            android:layout_toRightOf="@+id/like_time"
            android:layout_marginLeft="10dp"
            android:textColor="@color/dingwei" />

        <TextView
            android:id="@+id/like_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="今天打卡上海财经大学！"
            android:textSize="14sp"
            android:layout_below="@+id/like_time"
            android:layout_toRightOf="@+id/like_touxiang"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="10dp"
            android:textColor="@color/black" />
    </RelativeLayout>

    <ImageView
        android:layout_width="25dp"
        android:layout_height="25dp"
        android:src="@mipmap/already_like"
        android:layout_alignParentRight="true"
        android:layout_marginTop="15dp"
        android:layout_marginRight="10dp" />

    <com.example.jiyi.CustomRoundAngleImageView
        android:id="@+id/like_notepic"
        android:layout_width="300dp"
        android:layout_height="125dp"
        android:layout_marginTop="90dp"
        android:layout_marginLeft="85dp"
        android:scaleType="centerCrop"
        android:src="@drawable/sufe1" />
</RelativeLayout>